<%- include('../partials/header') %>


<form action="/outdoors" method="POST">
<div class="add-trail">
    <label >Hiking Trails:</label>
    <input type="text" placeholder="Trail" name="trail">
    <label >Location:</label>
    <input type="text" placeholder="City, State" name="location">
    <label >Distance:</label>
    <input type="text" placeholder="Distance" name="distance">
    <label class="difficulty">Difficulty:</label>
    <select name="difficulty" id="hiking-diff">
        <option value="Easy">Easy</option>
        <option value="Medium">Medium</option>
        <option value="Hard">Hard</option>
    </select>
    <button class="submit-button"> Submit</button>
</div>
</form>



