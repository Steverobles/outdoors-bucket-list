<%- include('../partials/header') %>

<section class="edit-backpacking-form">
  <h2>Edit Backpacking Details</h2>
  <form action="/backpacking/<%= backpacking._id %>?_method=PUT" method="post">
    <div class="edit-field">
      <label>Trail:</label>
      <input type="text" name="trail" value="<%= backpacking.trail %>" />
    </div>
    <div class="edit-field">
      <label>Location:</label>
      <input type="text" name="location" value="<%= backpacking.location %>" />
    </div>
    <div class="edit-field">
      <label>Distance:</label>
      <input type="text" name="distance" value="<%= backpacking.distance %>" />
    </div>
    <div class="edit-field">
      <label>Difficulty:</label>
      <select name="difficulty">
        <option value="Easy" <%= backpacking.difficulty === 'Easy' ? 'selected' : '' %>>Easy</option>
        <option value="Medium" <%= backpacking.difficulty === 'Medium' ? 'selected' : '' %>>Medium</option>
        <option value="Hard" <%= backpacking.difficulty === 'Hard' ? 'selected' : '' %>>Hard</option>
      </select>
    </div>
    <button type="submit">Update</button>
  </form>
</section>

<%- include('../partials/footer') %>
